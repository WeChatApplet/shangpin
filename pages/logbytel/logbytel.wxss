page{
   width: 100%;
   height: 100%;
}
.logbox{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 10%;
  padding-left: 10px;
  padding-right: 10px;
  align-content: flex-start;
}
.logbox view{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1px solid #aaa;
  padding-bottom: 10px;
  margin-bottom: 16px;
}
.logbox view image{
  width: 24px;
  height: 24px;
}
.logbox view input{
  padding-left: 10px;
}
.logbox button{
  margin: 30px 0;
}
.logbox a{
  display: block;
  text-align: right;
  color: #555;
  font-size: 14px;
}
