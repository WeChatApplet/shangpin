.cartBox{
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
}
.cartBox .goodsList{
   flex: 1;
   display: flex;
}
.cartBox .scrollBox{
   width: 100%;
   flex: 1;
}
.cartBox .footer{
   display: flex;
   width:100%;
   height: 48px;
   box-sizing: border-box;
   border-top: 1px solid #ccc;
}
.cartBox .footer .sum{
   flex: 2;
   line-height: 48px;
   text-align: right;
   padding-right: 4px;
}
.cartBox .footer .sum .part1{
   font-size: 14px;
   color: rgb(0, 0, 0);
}
.cartBox .footer .sum .part2{
   font-weight: bold;
   font-size: 14px;
   color: rgb(0, 0, 0);
}
.cartBox .footer a{
   flex: 1;
   background-color: #c8c8c8;
   color: white;
   height: 100%;
   font-size: 17px;
   line-height: 48px;
   text-align: center;
}
.scrollContent{
   display: flex;
   height: 120px;
   align-items: center;
   justify-content: center;
}
.scrollContent checkbox{
   flex: 1;
   text-align: center;
}
.scrollContent image{
   box-sizing: border-box;
   padding: 0 20px 0px 5px;
   height: 86%;
   flex: 2.5;
}
.scrollContent .textInf{
   /*padding-left: 20px;*/
   box-sizing: border-box;
   flex: 3;
   display: flex;
   height: 100%;
   flex-direction: column;
   padding-top: 10px;
}
.scrollContent .textInf p{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0;
    color: #2d2d2d;
    width: 90%;
    height: 30px;
    font-size: 14px;
}
.scrollContent .textInf .goodInf{
   font-size: 14px;
   color: rgb(136, 136, 136);
   height: 30px;
}
.scrollContent .textInf .goodInf .color{
   margin-right: 20px;
}
.scrollContent .textInf .price{
   display: flex;
}
.scrollContent .textInf .part1{
   color: rgb(198, 32, 38);
   font-size: 14px;
   line-height: 30px;
}
.scrollContent .textInf .part2{
   padding-left: 4px;
   color: rgb(136, 136, 136);
   font-size: 12px;
   text-decoration: line-through;
   line-height: 30px;
   margin-right: 26px;
}
.scrollContent .textInf .number text{
    display: inline-block;
    width: 20px;
    height: 20px;
    line-height: 20px;
    background-color: #fff;
    text-align: center;
    font-size: 16px;
    border: 1px solid #ccc;
}
