.contentBox{
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
}
.contentBox .search{
   display: flex;
   box-sizing: border-box;
   width: 100%;
   height: 50px;
   border-bottom: 1px solid #999;
   padding: 4px 8px;
   align-items: center;
}
.contentBox .search view{
   height: 30px;
   width: 84%;
   display: flex;
   box-sizing: border-box;
   border: 1px solid #ccc;
   align-items: center;
   padding-left: 6px;
}
.contentBox .search view image{
   width: 22px;
   height: 22px;
}
.contentBox .search view input{
   margin-left: 6px;
}
.contentBox .search text{
   margin-left: 6px;
   color: #555;
}
.contentBox .recommend{
   flex: 1;
   padding-left: 10px;
   /*padding-right: 4px;*/
}
.contentBox .recommend text{
   display: block;
   color: #ccc;
   font-size: 14px;
   height: 44px;
   line-height: 44px;
}
.contentBox .recommend ul{
   display: flex;
   flex-wrap: wrap;
}
.contentBox .recommend ul li{
   padding: 7px 17px;
   font-size: 14px;
   color: #888;
   border: 1px solid #ccc;
   margin: 0 6px 12px 0;
}
